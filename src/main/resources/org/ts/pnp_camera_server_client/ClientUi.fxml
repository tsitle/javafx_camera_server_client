<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.ts.pnp_camera_server_client.FxController">
   <center>
      <AnchorPane fx:id="imageAnchorPane" prefHeight="482.0" prefWidth="800.0" style="-fx-background-color: yellow;" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="currentFrame" />
         </children>
      </AnchorPane>
   </center>
   <bottom>
      <AnchorPane fx:id="bottomAnchorPane" prefHeight="209.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <bottom>
                  <AnchorPane BorderPane.alignment="CENTER">
                     <children>
                        <Label fx:id="statusLbl" alignment="CENTER" style="-fx-background-color: brown;" text="Status" textAlignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                     </children>
                  </AnchorPane>
               </bottom>
               <center>
                  <TabPane fx:id="mainTabPane" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: blue;" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
                    <tabs>
                      <Tab text="Connection">
                        <content>
                          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                 <children>
                                    <VBox alignment="TOP_CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                       <children>
                                          <Button fx:id="connectBtn" alignment="center" onAction="#evtConnect" text="Connect" />
                                          <GridPane>
                                            <columnConstraints>
                                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                            </columnConstraints>
                                            <rowConstraints>
                                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                            </rowConstraints>
                                             <children>
                                                <Label alignment="CENTER_RIGHT" text="Server URL" textAlignment="RIGHT" textFill="WHITE" GridPane.halignment="RIGHT">
                                                   <padding>
                                                      <Insets right="5.0" />
                                                   </padding>
                                                </Label>
                                                <TextField fx:id="serverUrlTxtfld" text="http://rpi5pnp:8090" GridPane.columnIndex="1" />
                                                <Label alignment="CENTER_RIGHT" text="API Key" textAlignment="RIGHT" textFill="WHITE" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
                                                   <padding>
                                                      <Insets right="5.0" />
                                                   </padding>
                                                </Label>
                                                <TextField fx:id="serverApiKeyTxtfld" text="fcab525e507275f17fbaf7932048beba" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                             </children>
                                             <VBox.margin>
                                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                                             </VBox.margin>
                                          </GridPane>
                                       </children>
                                       <padding>
                                          <Insets top="15.0" />
                                       </padding>
                                    </VBox>
                                 </children>
                              </AnchorPane>
                        </content>
                      </Tab>
                      <Tab text="Controls">
                        <content>
                          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                 <children>
                                    <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                       <padding>
                                          <Insets top="15.0" />
                                       </padding>
                                       <children>
                                          <HBox alignment="TOP_CENTER">
                                             <children>
                                                <Button fx:id="ctrlCamLeftBtn" disable="true" mnemonicParsing="false" onAction="#evtCtrlCamLeft" text="CAM L" />
                                                <Button fx:id="ctrlCamBothBtn" disable="true" mnemonicParsing="false" onAction="#evtCtrlCamBoth" text="CAM BOTH">
                                                   <HBox.margin>
                                                      <Insets left="15.0" right="15.0" />
                                                   </HBox.margin>
                                                </Button>
                                                <Button fx:id="ctrlCamRightBtn" disable="true" mnemonicParsing="false" onAction="#evtCtrlCamRight" text="CAM R" />
                                             </children>
                                          </HBox>
                                       </children>
                                    </VBox>
                                 </children>
                              </AnchorPane>
                        </content>
                      </Tab>
                    </tabs>
                  </TabPane>
               </center>
            </BorderPane>
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
