<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.ts.camera_streaming_client.FxController">
   <center>
      <AnchorPane fx:id="imageAnchorPane" prefHeight="482.0" prefWidth="800.0" style="-fx-background-color: green;" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="currentFrame" />
         </children>
      </AnchorPane>
   </center>
   <bottom>
      <AnchorPane fx:id="bottomAnchorPane" style="-fx-background-color: yellow;" BorderPane.alignment="CENTER">
         <children>
            <BorderPane prefHeight="80.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <bottom>
                  <Label fx:id="statusLbl" style="-fx-background-color: #cecece;" text="Status" BorderPane.alignment="CENTER" />
               </bottom>
               <center>
                  <VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
                     <children>
                        <Button fx:id="connectBtn" alignment="center" onAction="#evtConnect" text="Connect" />
                     </children>
                  </VBox>
               </center>
               <padding>
                  <Insets top="15.0" />
               </padding>
            </BorderPane>
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
